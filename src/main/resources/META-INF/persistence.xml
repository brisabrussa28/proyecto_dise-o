<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="simple-persistence-unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades del modelo principal -->
        <class>ar.edu.utn.frba.dds.model.fuentes.FuenteDinamica</class>
        <class>ar.edu.utn.frba.dds.model.coleccion.Coleccion</class>
        <class>ar.edu.utn.frba.dds.model.coleccion.algoritmosconsenso.AlgoritmoDeConsenso</class>
        <class>ar.edu.utn.frba.dds.model.coleccion.algoritmosconsenso.Absoluta</class>
        <class>ar.edu.utn.frba.dds.model.coleccion.algoritmosconsenso.MayoriaSimple</class>
        <class>ar.edu.utn.frba.dds.model.coleccion.algoritmosconsenso.MultiplesMenciones</class>
        <class>ar.edu.utn.frba.dds.model.hecho.Hecho</class>

        <!-- Entidades de reportes y solicitudes -->
        <class>ar.edu.utn.frba.dds.model.reportes.Solicitud</class>

        <!-- Entidades de estadísticas -->
        <class>ar.edu.utn.frba.dds.model.estadisticas.Estadistica</class>

        <!-- Entidad para TF-IDF (NUEVA) -->
        <class>ar.edu.utn.frba.dds.domain.detectorspam.VectorTFIDF</class>

        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>

            <!-- Configuración de conexión PostgreSQL -->
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/ddstpa"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="1234abcd"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Configuración de zona horaria -->
            <property name="hibernate.jdbc.time_zone" value="America/Argentina/Buenos_Aires"/>

            <!-- Configuración de generación de esquema -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Configuración de logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="use_sql_comments" value="true"/>

            <!-- Configuración de pool de conexiones (recomendado) -->
            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>

            <!-- Configuración de caché de segundo nivel (opcional) -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>

            <!-- Configuración Hibernate Search con Lucene -->
            <property name="hibernate.search.backend.type" value="lucene"/>
            <property name="hibernate.search.backend.directory.type" value="local-heap"/>
            <property name="hibernate.search.enabled" value="true"/>
        </properties>

    </persistence-unit>

</persistence>