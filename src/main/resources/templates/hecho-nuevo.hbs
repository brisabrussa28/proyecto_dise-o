{{#partial "contenido"}}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="fa-regular fa-pen-to-square me-2"></i>Nuevo Hecho
                        </h5>
                    </div>

                    <div class="card-body p-4">
                        <form action="/hechos" method="POST" enctype="multipart/form-data">

                            <div class="mb-3">
                                <label class="form-label fw-bold">Título</label>
                                <input type="text" name="titulo" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Descripción</label>
                                <textarea name="descripcion" class="form-control"
                                          rows="3"></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Fecha del Suceso</label>
                                    <input type="datetime-local" name="fechaSuceso"
                                           class="form-control"
                                           required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Categoría</label>
                                    <input type="text" name="categoria" class="form-control"
                                           list="lista-categorias"
                                           placeholder="Ej: Robos, Accidentes, etc..."
                                           required autocomplete="off">
                                    <datalist id="lista-categorias"></datalist>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Etiquetas</label>
                                <input type="text"
                                       name="etiquetas"
                                       class="form-control"
                                       list="lista-etiquetas"
                                       placeholder="Ej: Robo, Armado, Urgente"
                                       autocomplete="off">

                                <datalist id="lista-etiquetas"></datalist>

                                <div class="form-text">Deben estar separadas por comas.
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Ubicación</label>
                                <div class="input-group mb-2">
                                    <input type="text" id="input-direccion" name="direccion"
                                           class="form-control"
                                           placeholder="Ej: Av. Corrientes 1234, CABA">
                                    <button type="button" class="btn btn-outline-primary"
                                            id="btn-buscar-dir">
                                        <i class="fa-solid fa-magnifying-glass"></i> Buscar en Mapa
                                    </button>
                                </div>

                                <div id="map-picker"
                                     style="height: 400px; width: 100%; border: 1px solid #ced4da; border-radius: 4px; margin-bottom: 10px;"></div>

                                <div class="input-group input-group-sm mt-2">
                                    <span class="input-group-text">Lat</span>
                                    <input type="text" name="latitud" id="lat"
                                           class="form-control bg-light" readonly required>
                                    <span class="input-group-text">Lng</span>
                                    <input type="text" name="longitud" id="lng"
                                           class="form-control bg-light" readonly required>
                                </div>
                            </div>

                            <input type="hidden" name="origen" value="PROVISTO_CONTRIBUYENTE">

                            <div class="mb-4">
                                <label class="form-label fw-bold">Fotos</label>
                                <input type="file" name="fotos" class="form-control" multiple
                                       accept="image/*">
                            </div>

                            <div class="d-flex justify-content-end gap-2">
                                <a href="/" class="btn btn-outline-secondary">Cancelar</a>
                                <button type="submit" class="btn btn-primary px-4">Guardar Hecho
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // 1. CARGA DE DATOS (Categorías y Etiquetas)
            const llenarDatalist = (url, idLista) => {
                fetch(url)
                    .then(res => res.json())
                    .then(data => {
                        const datalist = document.getElementById(idLista);
                        data.forEach(item => {
                            const option = document.createElement('option');
                            option.value = item;
                            datalist.appendChild(option);
                        });
                    })
                    .catch(err => console.error("Error cargando lista: " + url, err));
            };

            llenarDatalist('/hechos/categorias', 'lista-categorias');
            llenarDatalist('/etiquetas', 'lista-etiquetas');

            // 2. INICIALIZAR MAPA
            const map = L.map('map-picker').setView([-34.6037, -58.3816], 12);
            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap'
            }).addTo(map);

            let marker;

            // Función para mover el marcador y guardar lat/lng en los inputs ocultos
            function actualizarUbicacion(lat, lng) {
                if (marker) {
                    marker.setLatLng([lat, lng]);
                } else {
                    marker = L.marker([lat, lng]).addTo(map);
                }
                map.setView([lat, lng], 15);
                document.getElementById('lat').value = lat;
                document.getElementById('lng').value = lng;
            }

            // --- NUEVO: Función para obtener dirección desde coordenadas ---
            function obtenerDireccion(lat, lng) {
                const inputDireccion = document.getElementById('input-direccion');

                // 1. Feedback visual (mientras carga)
                inputDireccion.value = "Buscando dirección...";
                inputDireccion.style.color = "#999"; // Gris para indicar carga

                // 2. Llamada a la API
                const url = `https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`;

                fetch(url)
                    .then(res => res.json())
                    .then(data => {
                        if (data && data.display_name) {
                            // 3. Escribir la dirección real
                            inputDireccion.value = data.address.road;
                            inputDireccion.style.color = "#000"; // Volver a negro
                        } else {
                            inputDireccion.value = "Dirección no encontrada";
                        }
                    })
                    .catch(err => {
                        console.error("Error obteniendo dirección:", err);
                        inputDireccion.value = "";
                    });
            }

            // --- EVENTOS ---

            // A. Clic en el mapa (Actualiza marcador Y busca dirección)
            map.on('click', function(e) {
                const lat = e.latlng.lat.toFixed(6);
                const lng = e.latlng.lng.toFixed(6);

                actualizarUbicacion(lat, lng); // Mueve el pin
                obtenerDireccion(lat, lng);    // Actualiza la barra de texto
            });

            // B. Buscar Dirección con el botón (Actualiza marcador)
            document.getElementById('btn-buscar-dir').addEventListener('click', () => {
                const query = document.getElementById('input-direccion').value;
                if (!query) return;

                fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}`)
                    .then(res => res.json())
                    .then(data => {
                        if (data && data.length > 0) {
                            actualizarUbicacion(data[0].lat, data[0].lon);
                        } else {
                            alert("Dirección no encontrada");
                        }
                    })
                    .catch(err => console.error("Error en geocoding", err));
            });

            setTimeout(() => { map.invalidateSize(); }, 200);
        });
    </script>
