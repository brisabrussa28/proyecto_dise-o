{{#partial "contenido"}}
    <div class="container pb-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="fa-regular fa-pen-to-square me-2"></i>Nuevo Hecho
                        </h5>
                    </div>

                    <div class="card-body p-4">
                        <form action="/hechos" method="POST" enctype="multipart/form-data">

                            <div class="mb-3">
                                <label class="form-label fw-bold">Título</label>
                                <input type="text" name="titulo" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Descripción</label>
                                <textarea name="descripcion" class="form-control"
                                          rows="3"></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Fecha del Suceso</label>
                                    <input type="datetime-local" name="fechaSuceso"
                                           class="form-control"
                                           required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Categoría</label>
                                    <input type="text" name="categoria" class="form-control"
                                           list="lista-categorias" placeholder="Escribe o busca..."
                                           required autocomplete="off">
                                    <datalist id="lista-categorias"></datalist>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Etiquetas</label>
                                <input type="text"
                                       name="etiquetas"
                                       class="form-control"
                                       list="lista-etiquetas"
                                       placeholder="Ej: Robo, Armado, Urgente"
                                       autocomplete="off">

                                <datalist id="lista-etiquetas"></datalist>

                                <div class="form-text">Deben estar separadas por comas.
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Ubicación</label>
                                <div class="input-group mb-2">
                                    <input type="text" id="input-direccion" name="direccion"
                                           class="form-control"
                                           placeholder="Ej: Av. Corrientes 1234, CABA">
                                    <button type="button" class="btn btn-outline-primary"
                                            id="btn-buscar-dir">
                                        <i class="fa-solid fa-magnifying-glass"></i> Buscar en Mapa
                                    </button>
                                </div>

                                <div id="map-picker"
                                     style="height: 300px; width: 100%; border: 1px solid #ced4da; border-radius: 4px; margin-bottom: 10px;"></div>

                                <div class="input-group input-group-sm mt-2">
                                    <span class="input-group-text">Lat/Lng</span>
                                    <input type="text" name="latitud" id="lat"
                                           class="form-control bg-light" readonly required>
                                    <input type="text" name="longitud" id="lng"
                                           class="form-control bg-light" readonly required>
                                </div>
                            </div>

                            <input type="hidden" name="origen" value="PROVISTO_CONTRIBUYENTE">

                            <div class="mb-4">
                                <label class="form-label fw-bold">Fotos</label>
                                <input type="file" name="fotos" class="form-control" multiple
                                       accept="image/*">
                            </div>

                            <div class="d-flex justify-content-end gap-2">
                                <a href="/" class="btn btn-outline-secondary">Cancelar</a>
                                <button type="submit" class="btn btn-primary px-4">Guardar Hecho
                                </button>
                            </div>
                        </form>
                    </div>

                    <script>
                        document.addEventListener('DOMContentLoaded', () => {
                            // --- 1. CARGA DE CATEGORÍAS (Backend -> Datalist) ---
                            fetch('/hechos/categorias')
                                .then(res => res.json())
                                .then(data => {
                                    const dataList = document.getElementById('lista-categorias');
                                    data.forEach(cat => {
                                        const option = document.createElement('option');
                                        option.value = cat; // Inserta "ROBO", "INCENDIO", etc.
                                        dataList.appendChild(option);
                                    });
                                });

                            // --- 2. LOGICA DEL MAPA ---
                            const map = L.map('map-picker').setView([-34.6037, -58.3816], 12);
                            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '© OpenStreetMap' }).addTo(map);

                            let marker;

                            // Función reutilizable para mover el marcador
                            function actualizarMarcador(lat, lng) {
                                if (marker) {
                                    marker.setLatLng([lat, lng]);
                                } else {
                                    marker = L.marker([lat, lng]).addTo(map);
                                }
                                map.setView([lat, lng], 15); // Zoom al punto

                                // Actualizar inputs del formulario
                                document.getElementById('lat').value = lat;
                                document.getElementById('lng').value = lng;
                            }

                            // A. Clic en el mapa -> Actualiza coordenadas
                            map.on('click', function(e) {
                                actualizarMarcador(e.latlng.lat.toFixed(6), e.latlng.lng.toFixed(6));
                            });

                            // B. Buscar Dirección (Geocoding con Nominatim)
                            document.getElementById('btn-buscar-dir').addEventListener('click', () => {
                                const direccion = document.getElementById('input-direccion').value;
                                if (!direccion) return;

                                // Usamos la API gratuita de OpenStreetMap (Nominatim)
                                fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(direccion)}`)
                                    .then(res => res.json())
                                    .then(data => {
                                        if (data && data.length > 0) {
                                            const resultado = data[0]; // Tomamos el primer resultado
                                            actualizarMarcador(resultado.lat, resultado.lon);
                                        } else {
                                            alert("No se encontró esa dirección.");
                                        }
                                    })
                                    .catch(err => console.error("Error al geocodificar:", err));
                            });
                        });
                    </script>
                </div>

            </div>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // 1. Iniciar mapa pequeño en Buenos Aires
            const map = L.map('map-picker').setView([-34.6037, -58.3816], 12);

            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap'
            }).addTo(map);

            let marker;

            // 2. Escuchar clics en el mapa
            map.on('click', function(e) {
                const lat = e.latlng.lat.toFixed(6);
                const lng = e.latlng.lng.toFixed(6);

                // Actualizar inputs visibles
                document.getElementById('lat').value = lat;
                document.getElementById('lng').value = lng;

                // Mover o crear el marcador
                if (marker) {
                    marker.setLatLng(e.latlng);
                } else {
                    marker = L.marker(e.latlng).addTo(map);
                }
            });
        });
    </script>
