{{#partial "contenido"}}
    <div class="container d-flex flex-column justify-content-center align-items-center mt-3"
         style="min-height: 85vh;">

        {{#if error}}
            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center shadow-sm mb-4"
                 role="alert"
                 style="max-width: 450px; width: 100%;">
                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                <div>{{error}}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/if}}

        <div class="card shadow-lg border-0" style="width: 100%; max-width: 450px;">
            <div class="card-body p-5">

                <div class="text-center mb-4">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="fa-solid fa-user-plus fs-3"></i>
                    </div>
                    <h3 class="fw-bold text-dark">Crear Cuenta</h3>
                    <p class="text-muted small">Únete a MetaMapa para reportar sucesos</p>
                </div>

                <form action="/usuarios" method="POST" enctype="multipart/form-data">
                    {{#if redirect}}
                        <input type="hidden" name="redirect" value="{{redirect}}">
                    {{/if}}

                    <div class="mb-3">
                        <label class="form-label fw-bold small">Nombre de Usuario</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fa-regular fa-user text-muted"></i>
                            </span>
                            <input type="text"
                                   class="form-control border-start-0 ps-0 {{#if error}}is-invalid{{/if}}"
                                   name="username"
                                   value="{{nombre}}"
                                   placeholder="Ej: Walter White"
                                   required
                                   minlength="4"
                                   maxlength="40"
                                   autofocus>
                        </div>
                        <div class="form-text small">Mínimo 4 caracteres, máximo 40.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small">E-Mail</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fa-regular fa-envelope text-muted"></i>
                            </span>
                            <input type="email"
                                   class="form-control border-start-0 ps-0 {{#if error}}is-invalid{{/if}}"
                                   name="email"
                                   value="{{email}}"
                                   placeholder="Ej: email@deprueba.com"
                                   required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small">Foto de Perfil (Opcional)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fa-regular fa-image text-muted"></i>
                            </span>
                            <input type="file"
                                   class="form-control border-start-0 ps-0"
                                   name="foto_perfil"
                                   accept="image/*">
                        </div>
                        <div class="form-text small">Formatos aceptados: JPG, PNG, GIF (máx. 5MB)</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fa-solid fa-lock text-muted"></i>
                            </span>
                            <input type="password"
                                   class="form-control border-start-0 ps-0 {{#if error}}is-invalid{{/if}}"
                                   name="password"
                                   placeholder="••••••••"
                                   required
                                   minlength="6">
                        </div>
                        <div class="form-text small">Mínimo 6 caracteres.</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold small">Confirmar Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fa-solid fa-lock text-muted"></i>
                            </span>
                            <input type="password"
                                   class="form-control border-start-0 ps-0 {{#if error}}is-invalid{{/if}}"
                                   name="repetir_password"
                                   placeholder="••••••••"
                                   required
                                   minlength="6">
                        </div>
                    </div>

                    <input type="hidden" name="rol" value="CONTRIBUYENTE">

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold">
                            <i class="fa-solid fa-user-plus me-2"></i>
                            Registrarse
                        </button>
                    </div>

                    <div class="text-center border-top pt-3">
                        <span class="text-muted small">¿Ya tienes cuenta?</span>
                        <a href="/auth/login{{#if redirect}}?redirect={{redirect}}{{/if}}"
                           class="text-decoration-none fw-bold ms-1">
                            Inicia Sesión
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
{{/partial}}

{{> templates/layout}}