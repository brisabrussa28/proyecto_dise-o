{{#partial "contenido"}}
    <div class="container d-flex flex-column justify-content-center align-items-center"
         style="min-height: 85vh;">

        <div class="card shadow-lg border-0" style="width: 100%; max-width: 450px;">
            <div class="card-body p-5">

                <div class="text-center mb-4">
                    <h3 class="fw-bold text-primary">Crear Cuenta</h3>
                    <p class="text-muted small">Únete a MetaMapa para reportar sucesos</p>
                </div>

                <form action="/usuarios" method="POST">
                    {{#if redirect}}
                        <input type="hidden" name="redirect" value="{{redirect}}">
                    {{/if}}
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Nombre de Usuario</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i
                                    class="fa-regular fa-user text-muted"></i></span>
                            <input type="text" class="form-control border-start-0 ps-0"
                                   name="username" placeholder="Ej: Walter White" required
                                   minlength="4">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small">E-Mail</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i
                                    class="fa-regular fa-envelope text-muted"></i></span>
                            <input type="email" class="form-control border-start-0 ps-0"
                                   name="email" placeholder="Ej: email@deprueba.com" required
                            >
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i
                                    class="fa-solid fa-lock text-muted"></i></span>
                            <input type="password" class="form-control border-start-0 ps-0"
                                   name="password" placeholder="••••••••" required minlength="6">
                        </div>
                        <div class="form-text small">Mínimo 6 caracteres.</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold small">Confirmar Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i
                                    class="fa-solid fa-lock text-muted"></i></span>
                            <input type="password" class="form-control border-start-0 ps-0"
                                   name="repetir_password" placeholder="••••••••" required>
                        </div>
                    </div>

                    <input type="hidden" name="rol" value="CONTRIBUYENTE">

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-dark btn-lg">
                            <i class="fa-solid fa-user-plus me-2"></i>Registrarse
                        </button>
                    </div>

                    <div class="text-center border-top pt-3">
                        <span class="text-muted small">¿Ya tienes usuario?</span>
                        <a href="/auth/login" class="text-decoration-none fw-bold ms-1">Inicia
                            Sesión</a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    {{#if error}}
        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>
            <div>{{error}}</div>
        </div>
    {{/if}}
{{/partial}}

{{> templates/layout}}