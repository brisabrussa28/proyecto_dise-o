{{#partial "contenido"}}
<div class="d-flex align-items-center justify-content-center min-vh-100 bg-white">
    <div class="text-center px-4" style="max-width: 700px;">

        <!-- Código de Estado -->
        <h1 class="fw-bold text-dark" style="font-size: 6rem; line-height: 1;">
            {{#if errorStatus}}{{errorStatus}}{{else}}Error{{/if}}
        </h1>

        <!-- Mensaje -->
        <h2 class="h4 text-secondary mb-4 mt-2">
            {{#if errorMessage}}{{errorMessage}}{{else}}Ocurrió un error inesperado{{/if}}
        </h2>

        <div class="d-grid gap-2 d-sm-flex justify-content-center mt-4">
            <a href="javascript:history.back()" class="btn btn-dark btn-lg px-5 rounded-pill">
                Volver
            </a>
            <a href="/" class="btn btn-outline-dark btn-lg px-5 rounded-pill">
                Inicio
            </a>
        </div>

        <!-- Detalles Técnicos (Ocultos nativamente) -->
        {{#if errorDetails}}
            <div class="mt-5 text-start">
                <details class="border rounded p-2 bg-light">
                    <summary class="text-muted small cursor-pointer">Ver detalles técnicos</summary>
                    <div class="mt-2 p-3 bg-dark text-white rounded font-monospace" style="font-size: 0.75rem; overflow-x: auto;">
                        <div class="mb-2 text-warning">Timestamp: {{timestamp}}</div>
                        <pre class="m-0">{{errorDetails}}</pre>
                    </div>
                </details>
            </div>
        {{/if}}

    </div>
</div>
{{/partial}}
{{> templates/layout}}