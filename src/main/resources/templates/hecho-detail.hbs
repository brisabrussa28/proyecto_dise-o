{{#partial "nav_izquierda"}}
    <button class="btn btn-outline-light btn-sm d-flex align-items-center gap-2"
            onclick="history.back()">
        <i class="fas fa-arrow-left"></i>
        <span class="d-none d-md-inline">Volver</span>
    </button>
{{/partial}}

<style>
    .carousel-control-prev,
    .carousel-control-next {
        background-color: rgba(0, 0, 0, 0.3);
        width: 5%;
    }

    .carousel-control-prev:hover,
    .carousel-control-next:hover {
        background-color: rgba(0, 0, 0, 0.6);
    }
</style>

{{#partial "contenido"}}
    <div class="container bg-white bg-opacity-75 rounded p-3 mt-3 mb-2">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Categoria:
                <span class="badge bg-primary fs-6">
                    {{#if (gt hecho.categoria.length 100)}}
                        {{substring hecho.categoria 0 100}}...
                    {{else}}
                        {{hecho.categoria}}
                    {{/if}}
                </span>
            </h4>
            <div class="d-flex gap-2">
                {{#if esEditable}}
                    <a href="/hechos/{{hecho.id}}/editar" class="btn btn-warning btn-sm">
                        <i class="fa-solid fa-pen"></i> Editar
                    </a>
                {{else}}
                    <a href="/hechos/reporte/{{hecho.id}}/" class="btn btn-warning btn-sm">
                        <i class="bi bi-exclamation-triangle-fill"></i> Reportar
                    </a>
                {{/if}}
            </div>
        </div>

        <div class="row">

            <div class="col-lg-8">

                <h2 class="fw-bold mb-3">
                    {{#if (gt hecho.titulo.length 40)}}
                        {{substring hecho.titulo 0 40}}...
                    {{else}}
                        {{hecho.titulo}}
                    {{/if}}
                </h2>

                {{#if hecho.fotos}}
                    <div id="carouselHecho"
                         class="carousel slide mb-4 shadow-sm rounded overflow-hidden border"
                         data-bs-ride="carousel">
                        <div class="carousel-inner bg-white">
                            {{#each hecho.fotos}}
                                <div class="carousel-item bg-white {{#if @first}}active{{/if}}"
                                     style="height: 500px;">
                                    <div class="d-flex justify-content-center align-items-center w-100 h-100">
                                        {{#if this.esVideo}}
                                            <video controls class="d-block"
                                                   style="max-height: 100%; max-width: 100%;"
                                                   autoplay muted>
                                                <source src="/hechos/{{../hecho.id}}/multimedia/{{@index}}"
                                                        type="video/mp4">
                                            </video>
                                        {{else}}
                                            <img src="/hechos/{{../hecho.id}}/multimedia/{{@index}}"
                                                 class="d-block w-100"
                                                 style="height: 500px; object-fit: contain;"
                                                 alt="Foto del suceso">
                                        {{/if}}
                                    </div>
                                </div>
                            {{/each}}
                        </div>

                        {{#if (gt hecho.fotos.size 1)}}
                            <button class="carousel-control-prev" type="button"
                                    data-bs-target="#carouselHecho" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                    data-bs-target="#carouselHecho" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Siguiente</span>
                            </button>
                        {{/if}}
                    </div>
                {{else}}
                    <div class="bg-light rounded d-flex align-items-center justify-content-center mb-4"
                         style="height: 200px;">
                        <span class="text-muted"><i class="fa-regular fa-image fa-2x"></i><br>Sin imágenes</span>
                    </div>
                {{/if}}

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Descripción</h5>
                        <p class="card-text text-secondary"
                           style="white-space: pre-line;">{{hecho.descripcion}}</p>


                        {{# if hecho.etiquetas}}
                            <hr>
                            <div class="d-flex align-items-center gap-2 mt-3" style="flex-wrap: wrap;">
                                <i class="fa-solid fa-tags text-muted"></i>
                                {{#each hecho.etiquetas}}
                                    <span class="badge bg-light text-dark border">{{this.nombre}}</span>
                                {{/each}}
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white fw-bold">
                        Información del Hecho
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            {{# if hecho.autor}}
                                <div class="bg-secondary rounded-circle d-flex
                                justify-content-center align-items-center text-white me-3"
                                     style="width: 50px; height: 50px; font-size: 1.5rem;">
                                    {{#if hecho.autor.foto}}
                                        <img src="/usuarios/{{hecho.autor.id}}/foto"
                                             class="rounded-circle w-100 h-100"
                                             style="object-fit: cover;">
                                    {{else}}
                                        <i class="fa-solid fa-user"></i>
                                    {{/if}}
                                </div>
                                <div style="max-width: 60%">
                                    <h6 class="mb-0 fw-bold">{{hecho.autor.userName}}</h6>
                                    <small class="text-muted">{{hecho.autor.email}}</small>
                                </div>
                                <a href="/perfiles/{{hecho.autor.userName}}"
                                   class="btn btn-outline-primary btn-sm ms-auto">
                                    Ver Perfil
                                </a>
                            {{else}}
                                <div>
                                    <h6 class="mb-0">Hecho provisto por un Dataset.</h6>
                                </div>
                            {{/if}}
                        </div>

                        <ul class="list-group list-group-flush small">
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span><i class="fa-regular fa-calendar me-2"></i>Fecha Suceso</span>
                                <strong>{{fechaFormateada}}</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between px-0 border-0">
                                <span><i class="fa-solid fa-location-dot me-2"></i>Dirección</span>
                                <span class="text-end text-truncate" style="max-width: 150px;"
                                      title="{{hecho.direccion}}">
                                    {{hecho.direccion}}
                                </span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span><i class="fa-solid fa-map me-2"></i>Provincia</span>
                                <span class="text-end text-truncate" style="max-width: 250px;"
                                      title="{{hecho.provincia}}">
                                    {{hecho.provincia}}
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-white fw-bold">
                        Ubicación
                    </div>
                    <div class="card-body p-0">
                        <div id="map-detalle" style="height: 200px; width: 100%;"></div>
                    </div>
                    <div class="card-footer bg-white text-center">
                        <a href="https://www.google.com/maps/search/?api=1&query={{hecho.ubicacion.latitud}}
                        ,{{hecho.ubicacion.longitud}}"
                        target="_blank" class="btn btn-link btn-sm text-decoration-none">
                        <i class="fa-solid fa-map-location-dot"></i> Abrir en Google Maps
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const lat = {{hecho.ubicacion.latitud}};
            const lng = {{hecho.ubicacion.longitud}};

            // Inicializar mapa (solo lectura, sin zoom scroll para no molestar)
            const map = L.map('map-detalle', {
                scrollWheelZoom: false // Deshabilita zoom con rueda para mejorar UX
            }).setView([lat, lng], 15);

            L.tileLayer('https://wms.ign.gob.ar/geoserver/gwc/service/tms/1.0.0/capabaseargenmap@EPSG%3A3857@png/{z}/{x}/{y}.png', {
                tms: true,
                maxZoom: 18,
                attribution: '&copy; <a href="https://www.ign.gob.ar/">IGN Argentina</a>'
            }).addTo(map);

            // Marcador Fijo
            L.marker([lat, lng]).addTo(map)
                    .bindPopup("<b>{{hecho.titulo}}</b><br>{{hecho.direccion}}")
                    .openPopup();
        });
    </script>
{{/partial}}
{{> templates/layout}}