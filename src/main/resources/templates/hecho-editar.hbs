{{#partial "contenido"}}
    <style>
        .img-selector {
            cursor: pointer;
            position: relative;
            border: 3px solid transparent;
            transition: all 0.2s ease-in-out;
            border-radius: 8px;
            overflow: hidden;
        }

        .img-selector:hover {
            border-color: rgba(220, 53, 69, 0.5);
            transform: scale(1.02);
        }

        .img-selector.selected {
            border-color: #dc3545;
            opacity: 0.7;
        }

        .img-selector .trash-overlay {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #dc3545;
            font-size: 2rem;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            padding: 10px;
            width: 60px;
            height: 60px;
            justify-content: center;
            align-items: center;
        }

        .img-selector.selected .trash-overlay {
            display: flex;
        }
    </style>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="fa-regular fa-pen-to-square me-2"></i>Editar
                            Hecho</h5>
                    </div>

                    <div class="card-body p-4">
                        <form action="/hechos/{{hecho.id}}/editar" method="POST"
                              enctype="multipart/form-data">

                            <div class="mb-3">
                                <label class="form-label fw-bold">Titulo</label>
                                <input type="text" class="form-control" name="titulo"
                                       value="{{hecho.titulo}}"
                                       placeholder="Ej: Ella uso mi cabeza como un revolver...">
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Descripcion</label>
                                <textarea class="form-control" name="descripcion"
                                          placeholder="Incendio en Plaza Italia."
                                          rows="3">{{hecho.descripcion}}</textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Fecha del Suceso</label>
                                    <input type="datetime-local"
                                           name="fechaSuceso"
                                           class="form-control"
                                           value="{{hecho.fechaSuceso}}"
                                           max="{{fechaLimite}}">
                                    <div class="form-text small text-muted">No se puede editar a una
                                        fecha posterior a la original.
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Categoría</label>
                                    <input type="text" name="categoria" class="form-control"
                                           placeholder="Ej: Robos, Accidentes, etc..."
                                           autocomplete="off"
                                           value="{{hecho.categoria}}">
                                </div>
                            </div>


                            <div class="mb-3">
                                <label class="form-label fw-bold">Etiquetas</label>
                                <input type="text" class="form-control" name="etiquetas"
                                       value="{{etiquetasTexto}}"
                                       placeholder="Ej: choque, demora, transito">
                                <small class="form-text text-muted">Las etiquetas deben ir separadas
                                    por
                                    comas.</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Ubicación</label>

                                <div class="row">
                                    <div class="col-md-5 mb-2">
                                        <input type="text" id="input-direccion" name="direccion"
                                               class="form-control"
                                               placeholder="Ej: Av. Corrientes 1234"
                                               value="{{hecho.direccion}}">
                                    </div>

                                    <div class="col-md-7 mb-2">
                                        <div class="input-group">
                                            <select class="form-select" id="input-provincia"
                                                    name="provincia" required>
                                                <option value="" disabled selected>Cargando
                                                    provincias...
                                                </option>
                                            </select>
                                            <button type="button" class="btn btn-outline-primary"
                                                    id="btn-buscar-dir">
                                                <i class="fa-solid fa-magnifying-glass"></i> Buscar
                                            </button>
                                        </div>
                                    </div>

                                    <div id="alerta-error"
                                         class="alert alert-danger mt-2 py-2 d-none d-flex align-items-center"
                                         role="alert">
                                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                        <div>
                                            <span id="texto-error">Error en la búsqueda</span>
                                        </div>
                                    </div>
                                </div>

                                <div id="map-picker"
                                     style="height: 400px; width: 100%; border: 1px solid #ced4da; border-radius: 4px; margin-bottom: 10px;"></div>

                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">Lat</span>
                                    <input type="text" name="latitud" id="lat"
                                           class="form-control bg-light"
                                           value="{{hecho.ubicacion.latitud}}" readonly
                                           required>

                                    <span class="input-group-text">Lng</span>
                                    <input type="text" name="longitud" id="lng"
                                           class="form-control bg-light"
                                           value="{{hecho.ubicacion.longitud}}" readonly
                                           required>
                                </div>
                            </div>

                            {{#if hecho.fotos}}
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Archivos
                                        multimedia</label>
                                    <div class="row g-3">
                                        {{#each hecho.fotos}}
                                            <div class="col-6 col-md-3">
                                                <div class="img-selector shadow-sm"
                                                     onclick="toggleSeleccion(this)">

                                                    <img src="/hechos/{{../hecho.id}}/fotos/{{@index}}"
                                                         class="w-100"
                                                         style="height: 150px; object-fit: cover; display: block;">

                                                    <div class="trash-overlay">
                                                        <i class="fa-solid fa-trash-can"></i>
                                                    </div>

                                                    <input type="checkbox" name="fotos_borrar"
                                                           value="{{@index}}"
                                                           style="display: none;">
                                                </div>
                                            </div>
                                        {{/each}}
                                    </div>
                                    <small class="text-muted mt-2 d-block">
                                        Haz clic en las imágenes que quieras eliminar.
                                    </small>
                                </div>
                            {{/if}}

                            <div class="mb-4">
                                <label class="form-label fw-bold">Agregar Fotos</label>
                                <input type="file" class="form-control" name="nuevas_fotos"
                                       multiple
                                       accept="image/*">
                            </div>

                            <div class="d-flex justify-content-end gap-2">
                                <a href="/" class="btn btn-outline-secondary">Cancelar</a>
                                <button type="submit" class="btn btn-primary float-end">Guardar
                                    Cambios
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        function toggleSeleccion(elementoDiv) {
            // 1. Alternar la clase visual 'selected' (pone el borde rojo)
            elementoDiv.classList.toggle('selected');

            // 2. Buscar el checkbox oculto dentro de este div
            const checkbox = elementoDiv.querySelector('input[type="checkbox"]');

            // 3. Cambiar su valor (true/false)
            if (checkbox) {
                checkbox.checked = !checkbox.checked;
            }
        }
        document.addEventListener('DOMContentLoaded', () => {
            const modoEdicion = "{{hecho.id}}" !== "";
            const provinciaGuardada = "{{hecho.provincia}}";

            const latInicial = {{#if hecho.ubicacion.latitud}}{{hecho.ubicacion.latitud}}{{else}}
        -34.6037{{/if}};
            const lngInicial = {{#if hecho.ubicacion.longitud}}{{hecho.ubicacion.longitud}}{{else}}
        -58.3816{{/if}};

            const selectProvincia = document.getElementById('input-provincia');
            const inputDireccion = document.getElementById('input-direccion');

            fetch('https://apis.datos.gob.ar/georef/api/provincias?campos=nombre&orden=nombre')
            .then(res => res.json())
            .then(data => {
                selectProvincia.innerHTML = '<option value="" disabled selected>Seleccione una provincia...</option>';
                data.provincias.forEach(prov => {
                    const option = document.createElement('option');
                    option.value = prov.nombre;
                    option.textContent = prov.nombre;

                    // Si estamos editando y coincide la provincia, la seleccionamos
                    if (provinciaGuardada && prov.nombre === provinciaGuardada) {
                        option.selected = true;
                    }
                    selectProvincia.appendChild(option);
                });
            })
            .catch(err => {
                selectProvincia.innerHTML = '<option value="">Error cargando provincias</option>';
            });

            const map = L.map('map-picker').setView([latInicial, lngInicial], 13);
            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '© OpenStreetMap' }).addTo(map);

            let marker;

            if (modoEdicion || (latInicial !== -34.6037)) {
                marker = L.marker([latInicial, lngInicial], {draggable: true}).addTo(map);
                actualizarInputs(latInicial, lngInicial);
            }

            function actualizarInputs(lat, lng) {
                document.getElementById('lat').value = lat;
                document.getElementById('lng').value = lng;
            }

            function moverMarcador(lat, lng) {
                if (marker) {
                    marker.setLatLng([lat, lng]);
                } else {
                    marker = L.marker([lat, lng], {draggable: true}).addTo(map);
                    // Evento: si arrastras el marcador con el mouse
                    marker.on('dragend', function(e) {
                        const pos = e.target.getLatLng();
                        actualizarInputs(pos.lat, pos.lng);
                    });
                }
                map.setView([lat, lng], 16);
                actualizarInputs(lat, lng);
            }

            map.on('click', function(e) {
                moverMarcador(e.latlng.lat, e.latlng.lng);
            });

            const alertaError = document.getElementById('alerta-error');
            const textoError = document.getElementById('texto-error');

            function mostrarError(mensaje) {
                textoError.textContent = mensaje;
                alertaError.classList.remove('d-none'); // Muestra el cuadro

                setTimeout(() => {
                    alertaError.classList.add('d-none');
                }, 5000);
            }

            function ocultarError() {
                alertaError.classList.add('d-none'); // Oculta el cuadro
            }

            document.getElementById('btn-buscar-dir').addEventListener('click', () => {
                const calle = inputDireccion.value;
                const prov = selectProvincia.value;

                ocultarError();

                if (!calle) {
                    mostrarError("Por favor, escribe una dirección antes de buscar.");
                    return;
                }

                const btnBuscar = document.getElementById('btn-buscar-dir');
                const htmlOriginal = btnBuscar.innerHTML;
                btnBuscar.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i>';
                btnBuscar.disabled = true;

                let url = `https://nominatim.openstreetmap.org/search?format=json&street=${encodeURIComponent(calle)}&country=Argentina`;

                if (prov && prov !== "Cargando provincias...") {
                    url += `&state=${encodeURIComponent(prov)}`;
                }

                fetch(url)
                    .then(res => res.json())
                    .then(data => {
                        if (data && data.length > 0) {
                            const lat = data[0].lat;
                            const lon = data[0].lon;
                            moverMarcador(lat, lon);
                            ocultarError();
                        } else {
                            let msg = "No se encontró la dirección.";
                            mostrarError(msg);
                        }
                    })
                    .catch(err => {
                        console.error(err);
                        mostrarError("Error de conexión con el servicio de mapas.");
                    })
                    .finally(() => {
                        btnBuscar.innerHTML = htmlOriginal;
                        btnBuscar.disabled = false;
                    });
            });
            setTimeout(() => { map.invalidateSize(); }, 500);
        });
    </script>
