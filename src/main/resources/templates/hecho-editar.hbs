{{#partial "contenido"}}
    <style>
        .img-selector {
            cursor: pointer;
            position: relative;
            border: 3px solid transparent;
            transition: all 0.2s ease-in-out;
            border-radius: 8px;
            overflow: hidden;
        }

        .img-selector:hover {
            border-color: rgba(220, 53, 69, 0.5);
            transform: scale(1.02);
        }

        .img-selector.selected {
            border-color: #dc3545;
            opacity: 0.7;
        }

        .img-selector .trash-overlay {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #dc3545;
            font-size: 2rem;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            padding: 10px;
            width: 60px;
            height: 60px;
            justify-content: center;
            align-items: center;
        }

        .img-selector.selected .trash-overlay {
            display: flex;
        }
    </style>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="fa-regular fa-pen-to-square me-2"></i>Editar
                            Hecho</h5>
                    </div>

                    <div class="card-body p-4">
                        <form action="/hechos/{{hecho.id}}/editar" method="POST"
                              enctype="multipart/form-data">

                            <div class="mb-3">
                                <label class="form-label fw-bold">Titulo</label>
                                <input type="text" class="form-control" name="titulo"
                                       value="{{hecho.titulo}}"
                                       placeholder="Ej: Ella uso mi cabeza como un revolver...">
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Descripcion</label>
                                <textarea class="form-control" name="descripcion"
                                          placeholder="Incendio en Plaza Italia."
                                          rows="3">{{hecho.descripcion}}</textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Fecha del Suceso</label>
                                    <input type="datetime-local"
                                           name="fechaSuceso"
                                           class="form-control"
                                           value="{{hecho.fechaSuceso}}"
                                           max="{{fechaLimite}}">
                                    <div class="form-text small text-muted">No se puede editar a una
                                        fecha posterior a la original.
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Categoría</label>
                                    <input type="text" name="categoria" class="form-control"
                                           placeholder="Ej: Robos, Accidentes, etc..."
                                           autocomplete="off"
                                           value="{{hecho.categoria}}">
                                </div>
                            </div>


                            <div class="mb-3">
                                <label class="form-label fw-bold">Etiquetas</label>
                                <input type="text" class="form-control" name="etiquetas"
                                       value="{{etiquetasTexto}}"
                                       placeholder="Ej: choque, demora, transito">
                                <small class="form-text text-muted">Las etiquetas deben ir separadas
                                    por
                                    comas.</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Ubicación</label>

                                <div class="row">
                                    <div class="col-md-5 mb-2">
                                        <input type="text" id="input-direccion" name="direccion"
                                               class="form-control"
                                               placeholder="Ej: Av. Corrientes 1234"
                                               value="{{hecho.direccion}}"
                                               required>
                                    </div>

                                    <div class="col-md-7 mb-2">
                                        <div class="input-group">
                                            <select class="form-select" id="input-provincia"
                                                    name="provincia" required>
                                                <option value="" disabled selected>Cargando
                                                    provincias...
                                                </option>
                                            </select>
                                            <button type="button" class="btn btn-outline-primary"
                                                    id="btn-buscar-dir">
                                                <i class="fa-solid fa-magnifying-glass"></i> Buscar
                                            </button>
                                        </div>
                                    </div>

                                    <div id="alerta-error"
                                         class="alert alert-danger mt-2 py-2 d-none d-flex align-items-center"
                                         role="alert">
                                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                        <div>
                                            <span id="texto-error">Error en la búsqueda</span>
                                        </div>
                                    </div>
                                </div>

                                <div id="map-picker"
                                     style="height: 400px; width: 100%; border: 1px solid #ced4da; border-radius: 4px; margin-bottom: 10px;"></div>

                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">Lat</span>
                                    <input type="text" name="latitud" id="lat"
                                           class="form-control bg-light"
                                           value="{{hecho.ubicacion.latitud}}" readonly
                                           required>

                                    <span class="input-group-text">Lng</span>
                                    <input type="text" name="longitud" id="lng"
                                           class="form-control bg-light"
                                           value="{{hecho.ubicacion.longitud}}" readonly
                                           required>
                                </div>
                            </div>

                            {{#if hecho.fotos}}
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Archivos
                                        multimedia</label>
                                    <div class="row g-3">
                                        {{#each hecho.fotos}}
                                            <div class="col-6 col-md-3">
                                                <div class="img-selector shadow-sm"
                                                     onclick="toggleSeleccion(this)">

                                                    {{#if this.esVideo}}
                                                        <video src="/hechos/{{../hecho.id}}/multimedia/{{@index}}"
                                                               style="height: 150px; object-fit: cover; display: block; width: -webkit-fill-available;"
                                                               muted>
                                                        </video>
                                                    {{else}}
                                                        <img src="/hechos/{{../hecho.id}}/multimedia/{{@index}}"
                                                             class="w-100"
                                                             style="height: 150px; object-fit: cover; display: block;">
                                                    {{/if}}

                                                    <div class="trash-overlay">
                                                        <i class="fa-solid fa-trash-can"></i>
                                                    </div>

                                                    <input type="checkbox" name="fotos_borrar"
                                                           value="{{@index}}"
                                                           style="display: none;">
                                                </div>
                                            </div>
                                        {{/each}}
                                    </div>
                                    <small class="text-muted mt-2 d-block">
                                        Haz clic en las imágenes que quieras eliminar.
                                    </small>
                                </div>
                            {{/if}}

                            <div class="mb-4">
                                <label class="form-label fw-bold">Agregar Fotos</label>
                                <input type="file" class="form-control" name="nuevas_fotos"
                                       multiple
                                       accept="image/*, video/*">
                            </div>

                            <div class="d-flex justify-content-end gap-2">
                                <a href="/" class="btn btn-outline-secondary">Cancelar</a>
                                <button type="submit" class="btn btn-primary float-end">Guardar
                                    Cambios
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        function toggleSeleccion(elementoDiv) {
            // 1. Alternar la clase visual 'selected' (pone el borde rojo)
            elementoDiv.classList.toggle('selected');

            // 2. Buscar el checkbox oculto dentro de este div
            const checkbox = elementoDiv.querySelector('input[type="checkbox"]');

            // 3. Cambiar su valor (true/false)
            if (checkbox) {
                checkbox.checked = !checkbox.checked;
            }
        }
        document.addEventListener('DOMContentLoaded', () => {

            // --- 1. CONFIGURACIÓN ---
            const modoEdicion = "{{hecho.id}}" !== "";
            const provinciaGuardada = "{{hecho.provincia}}";

            // Coordenadas iniciales
            const latInicial = {{#if hecho.ubicacion.latitud}}{{hecho.ubicacion.latitud}}{{else}}
        -34.6037{{/if}};
            const lngInicial = {{#if hecho.ubicacion.longitud}}{{hecho.ubicacion.longitud}}{{else}}
        -58.3816{{/if}};

            const selectProvincia = document.getElementById('input-provincia');
            const inputDireccion = document.getElementById('input-direccion');

            // Alertas
            const alertaError = document.getElementById('alerta-error');
            const textoError = document.getElementById('texto-error');

            // --- 2. CARGAR PROVINCIAS (GEOREF - Lista Oficial) ---
            fetch('https://apis.datos.gob.ar/georef/api/provincias?campos=nombre&orden=nombre')
                .then(res => res.json())
                .then(data => {
                    selectProvincia.innerHTML = '<option value="" disabled selected>Seleccione una provincia...</option>';
                    data.provincias.forEach(prov => {
                        const option = document.createElement('option');
                        option.value = prov.nombre;
                        option.textContent = prov.nombre;

                        // Si editamos, seleccionamos la que estaba guardada
                        if (provinciaGuardada && prov.nombre === provinciaGuardada) {
                            option.selected = true;
                        }
                        selectProvincia.appendChild(option);
                    });
                })
                .catch(() => {
                    selectProvincia.innerHTML = '<option value="">Error cargando provincias</option>';
                });

            // --- 3. INICIALIZAR MAPA ---
            const map = L.map('map-picker').setView([latInicial, lngInicial], 13);
            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '© OpenStreetMap' }).addTo(map);

            let marker;

            if (modoEdicion || (latInicial !== -34.6037)) {
                marker = L.marker([latInicial, lngInicial], {draggable: true}).addTo(map);
                actualizarInputs(latInicial, lngInicial);

                marker.on('dragend', function(e) {
                    const pos = e.target.getLatLng();
                    actualizarInputs(pos.lat, pos.lng);
                    obtenerDatosUbicacion(pos.lat, pos.lng);
                });
            }

            // --- 4. FUNCIONES CLAVE ---

            function actualizarInputs(lat, lng) {
                document.getElementById('lat').value = lat;
                document.getElementById('lng').value = lng;
            }

            // Función para quitar acentos y minúsculas (para comparar fácil)
            function normalizarTexto(texto) {
                return texto.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
            }

            // Función MODIFICADA con la excepción para CABA vs Buenos Aires
            function obtenerDatosUbicacion(lat, lng) {
                inputDireccion.value = "Consultando mapa...";

                // --- CORRECCIÓN: Usamos nombres distintos para evitar el error "Identifier already declared" ---
                const latNum = parseFloat(lat);
                const lngNum = parseFloat(lng);

                // Límites aproximados de CABA
                const CABA_LIMITES = {
                    norte: -34.52,
                    sur:   -34.72,
                    este:  -58.33,
                    oeste: -58.54
                };

                // Verificamos si el punto está dentro del cuadro usando los números parseados
                const esCABA = (latNum <= CABA_LIMITES.norte && latNum >= CABA_LIMITES.sur) &&
                               (lngNum <= CABA_LIMITES.este  && lngNum >= CABA_LIMITES.oeste);

                fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`)
                    .then(res => res.json())
                    .then(data => {
                        if (data && data.address) {
                            // A. Dirección
                            const calle = data.address.road || "";
                            const altura = data.address.house_number || "";
                            const barrio = data.address.neighbourhood || "";
                            let textoDireccion = (calle + " " + altura).trim();
                            if (!textoDireccion) textoDireccion = barrio;
                            if (!textoDireccion) textoDireccion = data.display_name.split(',')[0];

                            inputDireccion.value = textoDireccion;

                            // B. Selección de Provincia (LÓGICA HÍBRIDA)
                            const opciones = selectProvincia.options;

                            if (esCABA) {
                                console.log("Detectado CABA por coordenadas");
                                for (let i = 0; i < opciones.length; i++) {
                                    const nombre = normalizarTexto(opciones[i].value);
                                    if (nombre.includes("autonoma") || nombre.includes("ciudad")) {
                                        selectProvincia.selectedIndex = i;
                                        return;
                                    }
                                }
                            }

                            // --- CAMINO NORMAL: No es CABA, buscamos por nombre ---
                            const estadoNominatim = data.address.state || data.address.city;
                            if (estadoNominatim) {
                                const nombreMapa = normalizarTexto(estadoNominatim);
                                let mejorMatch = -1;

                                for (let i = 0; i < opciones.length; i++) {
                                    const nombreOficial = normalizarTexto(opciones[i].value);

                                    // Si NO es CABA por coordenadas, prohibimos seleccionar CABA
                                    if (!esCABA && (nombreOficial.includes("autonoma") || nombreOficial.includes("ciudad"))) {
                                        continue;
                                    }

                                    if (nombreOficial === nombreMapa) {
                                        mejorMatch = i;
                                        break;
                                    }
                                    if (nombreOficial.includes(nombreMapa) || nombreMapa.includes(nombreOficial)) {
                                        mejorMatch = i;
                                    }
                                }

                                if (mejorMatch > -1) selectProvincia.selectedIndex = mejorMatch;
                            }

                        } else {
                            inputDireccion.value = "Ubicación desconocida";
                        }
                    })
                    .catch(err => {
                        console.error(err);
                        inputDireccion.value = "";
                    });
            }

            function moverMarcador(lat, lng) {
                if (marker) {
                    marker.setLatLng([lat, lng]);
                } else {
                    marker = L.marker([lat, lng], {draggable: true}).addTo(map);
                    marker.on('dragend', function(e) {
                        const pos = e.target.getLatLng();
                        actualizarInputs(pos.lat, pos.lng);
                        obtenerDatosUbicacion(pos.lat, pos.lng);
                    });
                }
                map.setView([lat, lng], 16);
                actualizarInputs(lat, lng);
            }

            // --- 5. EVENTOS ---

            map.on('click', function(e) {
                const lat = e.latlng.lat;
                const lng = e.latlng.lng;
                moverMarcador(lat, lng);
                obtenerDatosUbicacion(lat, lng);
            });

            const btnBuscar = document.getElementById('btn-buscar-dir');
            if (btnBuscar) {
                btnBuscar.addEventListener('click', () => {
                    const calle = inputDireccion.value;
                    const provSelect = selectProvincia.value; // Usamos el valor oficial seleccionado

                    if (alertaError) alertaError.classList.add('d-none');

                    if (!calle) {
                        alert("Ingresa una dirección"); return;
                    }

                    let url = `https://nominatim.openstreetmap.org/search?format=json&street=${encodeURIComponent(calle)}&country=Argentina`;

                    // Si hay provincia seleccionada en el dropdown, la usamos para filtrar
                    if (provSelect && provSelect !== "Cargando provincias...") {
                         url += `&state=${encodeURIComponent(provSelect)}`;
                    }

                    fetch(url)
                        .then(res => res.json())
                        .then(data => {
                            if (data && data.length > 0) {
                                const res = data[0];
                                moverMarcador(res.lat, res.lon);
                                obtenerDatosUbicacion(res.lat, res.lon); // Actualiza texto y confirma provincia
                            } else {
                                if(mostrarError) mostrarError("Dirección no encontrada");
                                else alert("No encontrada");
                            }
                        })
                        .catch(() => alert("Error de conexión"));
                });
            }

            // Función auxiliar para errores (si la tienes definida en tu HTML)
            function mostrarError(msg) {
                if(textoError && alertaError) {
                    textoError.textContent = msg;
                    alertaError.classList.remove('d-none');
                    setTimeout(() => { alertaError.classList.add('d-none'); }, 5000);
                }
            }

            setTimeout(() => { map.invalidateSize(); }, 500);
        });
    </script>
{{/partial}}
