{{#partial "contenido"}}
    <div class="container py-4">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="fw-bold"><i class="fa-solid fa-layer-group me-2"></i>Gestión de
                    Colecciones</h2>
                <p class="text-muted">Agrupa hechos, define fuentes y aplica algoritmos de
                    consenso.</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white fw-bold">
                        <i class="fa-solid fa-plus me-2"></i>Nueva Colección
                    </div>
                    <div class="card-body">
                        <form action="/admin/colecciones" method="POST" enctype="multipart/form-data">

                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre</label>
                                <input type="text" name="nombre" class="form-control"
                                       placeholder="Ej: Reportes de Tránsito" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Descripción</label>
                                <textarea name="descripcion" class="form-control" rows="2"
                                          required></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Categoría</label>
                                <input type="text" name="categoria" class="form-control"
                                       list="lista-categorias" required>
                                <datalist id="lista-categorias">
                                </datalist>
                            </div>

                            <hr>

                            <div class="mb-3">
                                <label class="form-label fw-bold"><i
                                        class="fa-solid fa-calculator me-1"></i>Algoritmo</label>
                                <select name="algoritmo_tipo" class="form-select" required>
                                    <option value="May_simple">Mayoría Simple</option>
                                    <option value="Absoluta">Absoluta</option>
                                    <option value="Mult_menciones">Múltiples Menciones</option>
                                </select>
                            </div>

                            <hr>

                            <div class="mb-3">
                                <label class="form-label fw-bold"><i
                                        class="fa-solid fa-database me-1"></i>Fuente de
                                    Datos</label>

                                <div class="btn-group w-100 mb-2" role="group">
                                    <input type="radio" class="btn-check" name="modo_fuente"
                                           id="modo_existente" value="existente" checked
                                           onchange="toggleFuente('existente')">
                                    <label class="btn btn-outline-secondary btn-sm"
                                           for="modo_existente">Existente</label>

                                    <input type="radio" class="btn-check" name="modo_fuente"
                                           id="modo_nueva" value="nueva"
                                           onchange="toggleFuente('nueva')">
                                    <label class="btn btn-outline-secondary btn-sm"
                                           for="modo_nueva">Crear Nueva</label>
                                </div>

                                <div id="panel-fuente-existente">
                                    <select name="fuente_id" class="form-select">
                                        <option value="" disabled selected>Selecciona fuente...
                                        </option>
                                        {{#each fuentes}}
                                            <option value="{{this.id}}">{{this.nombre}}</option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div id="panel-fuente-nueva"
                                     class="d-none bg-light p-3 border rounded">
                                    <div class="mb-2">
                                        <label class="small fw-bold">Nombre de la Fuente</label>
                                        <input type="text" name="nueva_fuente_nombre"
                                               class="form-control form-control-sm">
                                    </div>

                                    <div class="mb-2">
                                        <label class="small fw-bold">Tipo de Fuente</label>
                                        <select name="nueva_fuente_tipo" id="selectorTipoFuente"
                                                class="form-select form-select-sm"
                                                onchange="toggleInputsFuenteNueva()">
                                            <option value="DINAMICA">Dinámica</option>
                                            <option value="ESTATICA">Estática</option>
                                            <option value="API">API Externa</option>
                                            <option value="AGREGACION">Agregación</option>
                                        </select>
                                    </div>

                                    <!-- Campo Archivo (ESTATICA) -->
                                    <div id="campo-archivo" class="d-none mt-2">
                                        <label class="small fw-bold text-primary">Archivo de
                                            Datos</label>
                                        <input type="file" name="archivo_fuente"
                                               class="form-control form-control-sm"
                                               accept=".csv, .json">
                                        <div class="form-text x-small">Formatos soportados: CSV,
                                            JSON.
                                        </div>
                                    </div>

                                    <!-- Campo URL (API) -->
                                    <div id="campo-url" class="d-none mt-2">
                                        <label class="small fw-bold text-primary">URL Endpoint</label>
                                        <input type="text" name="url"
                                               class="form-control form-control-sm"
                                               placeholder="https://api.ejemplo.com/datos">
                                    </div>

                                    <!-- Campo Agregación (AGREGACION) -->
                                    <div id="campo-agregacion" class="d-none mt-2">
                                        <label class="small fw-bold text-primary mb-1">Fuentes a Combinar</label>
                                        <div class="input-group input-group-sm mb-2">
                                            <!-- Se llena vía JS llamando a /fuentes?soloSimples=true -->
                                            <select id="selectFuenteParaAgregacion" class="form-select">
                                                <option value="" disabled selected>Cargando fuentes...</option>
                                            </select>
                                            <button type="button" class="btn btn-outline-primary" onclick="agregarFuenteALista()">
                                                <i class="fa-solid fa-plus"></i>
                                            </button>
                                        </div>

                                        <ul id="listaFuentesAgregadas" class="list-group list-group-flush mb-2 border rounded bg-white" style="min-height: 50px; max-height: 150px; overflow-y: auto;">
                                            <li class="list-group-item text-center text-muted small fst-italic" id="placeholder-agregacion">
                                                Lista vacía
                                            </li>
                                        </ul>
                                        <!-- Contenedor inputs ocultos -->
                                        <div id="inputsAgregacionContainer"></div>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-warning w-100">Crear Colección
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white"><h5 class="mb-0" style="font-weight: 600;">Colecciones
                        Existentes</h5></div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            {{#each colecciones}}
                                <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <div>
                                        <h5 class="mb-1 fw-bold text-dark">{{this.titulo}}</h5>
                                        <div class="small text-muted mb-1">
                                            <span class="badge bg-light text-dark border me-1">{{this.categoria}}</span>
                                            {{this.descripcion}}
                                        </div>
                                        <div class="small">
                                            <i class="fa-solid fa-database me-1 text-secondary"></i>
                                            {{#if this.fuente}}{{this.fuente.nombre}}{{else}}
                                                <span class="text-danger">Sin Fuente</span>{{/if}}
                                        </div>
                                    </div>
                                    <a href="/admin/colecciones/{{this.id}}"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fa-solid fa-gear"></i> Configurar
                                    </a>
                                </div>
                            {{else}}
                                <div class="p-4 text-center text-muted">No hay colecciones.</div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Cargar fuentes filtradas para el selector de agregación
            cargarFuentesSimplesParaAgregacion();
        });

        async function cargarFuentesSimplesParaAgregacion() {
            const select = document.getElementById('selectFuenteParaAgregacion');
            try {
                // Consultamos el endpoint con el filtro
                const response = await fetch('/fuentes?soloSimples=true');
                if (!response.ok) throw new Error("Error en request");

                const data = await response.json();

                select.innerHTML = '<option value="" disabled selected>Elegir fuente...</option>';
                data.forEach(fuente => {
                    const option = document.createElement('option');
                    option.value = fuente.id;
                    option.textContent = fuente.nombre;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error("Error cargando fuentes simples:", error);
                select.innerHTML = '<option value="" disabled selected>Error cargando fuentes</option>';
            }
        }

        function toggleFuente(modo) {
            const panelExistente = document.getElementById('panel-fuente-existente');
            const panelNueva = document.getElementById('panel-fuente-nueva');

            if (modo === 'existente') {
                panelExistente.classList.remove('d-none');
                panelNueva.classList.add('d-none');
            } else {
                panelExistente.classList.add('d-none');
                panelNueva.classList.remove('d-none');
                toggleInputsFuenteNueva(); // Ajustar inputs al mostrar
            }
        }

        function toggleInputsFuenteNueva() {
            const tipo = document.getElementById('selectorTipoFuente').value;
            const campoArchivo = document.getElementById('campo-archivo');
            const campoUrl = document.getElementById('campo-url');
            const campoAgregacion = document.getElementById('campo-agregacion');

            // Reset
            campoArchivo.classList.add('d-none');
            campoUrl.classList.add('d-none');
            campoAgregacion.classList.add('d-none');

            // Limpiar requeridos
            if(campoArchivo.querySelector('input')) campoArchivo.querySelector('input').required = false;
            if(campoUrl.querySelector('input')) campoUrl.querySelector('input').required = false;

            if (tipo === 'ESTATICA') {
                campoArchivo.classList.remove('d-none');
                campoArchivo.querySelector('input').required = true;
            } else if (tipo === 'API') {
                campoUrl.classList.remove('d-none');
                campoUrl.querySelector('input').required = true;
            } else if (tipo === 'AGREGACION') {
                campoAgregacion.classList.remove('d-none');
            }
        }

        // Lógica para Agregar Fuentes en modo AGREGACION
        function agregarFuenteALista() {
            const select = document.getElementById('selectFuenteParaAgregacion');
            const lista = document.getElementById('listaFuentesAgregadas');
            const inputsContainer = document.getElementById('inputsAgregacionContainer');
            const placeholder = document.getElementById('placeholder-agregacion');

            const idFuente = select.value;
            const nombreFuente = select.options[select.selectedIndex].text;

            if (!idFuente) return;

            // Validar duplicados
            const yaExiste = document.querySelector(`input[name="fuentes_seleccionadas"][value="${idFuente}"]`);
            if (yaExiste) {
                alert("Fuente ya seleccionada.");
                return;
            }

            if (placeholder) placeholder.classList.add('d-none');

            // Crear Input Oculto (Mismo nombre que en FuenteController)
            const inputHidden = document.createElement('input');
            inputHidden.type = 'hidden';
            inputHidden.name = 'fuentes_seleccionadas';
            inputHidden.value = idFuente;
            inputHidden.id = `input-fuente-agg-${idFuente}`;
            inputsContainer.appendChild(inputHidden);

            // Crear Elemento Visual
            const li = document.createElement('li');
            li.className = 'list-group-item d-flex justify-content-between align-items-center py-1 small';
            li.id = `li-fuente-agg-${idFuente}`;
            li.innerHTML = `
                <span>${nombreFuente}</span>
                <button type="button" class="btn btn-sm btn-link text-danger p-0" onclick="quitarFuenteAgregacion('${idFuente}')">
                    <i class="fa-solid fa-times"></i>
                </button>
            `;
            lista.appendChild(li);

            select.value = "";
        }

        function quitarFuenteAgregacion(id) {
            document.getElementById(`input-fuente-agg-${id}`)?.remove();
            document.getElementById(`li-fuente-agg-${id}`)?.remove();

            const inputsContainer = document.getElementById('inputsAgregacionContainer');
            if (inputsContainer.children.length === 0) {
                document.getElementById('placeholder-agregacion').classList.remove('d-none');
            }
        }
    </script>
{{/partial}}
{{> templates/layout}}