{{#partial "nav_izquierda"}}
    <button class="btn btn-outline-light btn-sm d-flex align-items-center gap-2"
            onclick="history.back()">
        <i class="fas fa-arrow-left"></i>
        <span class="d-none d-md-inline">Volver</span>
    </button>
{{/partial}}

{{#partial "contenido"}}
    <div class="container-sm py-4 mx-auto ">
        <div class=" bg-white bg-opacity-75 rounded shadow-sm">

            <div class="d-flex flex-column p-3"
                 style="min-height: calc(100vh - 110px);">

                <div class="p-3 d-flex justify-content-between align-items-center border-bottom mb-3 pb-2 border-secondary border-opacity-25">
                    <h2 class="fw-bold">
                        <i class="fa-solid fa-gauge-high me-2"></i>Panel de Control
                    </h2>
                </div>

                <div class="row row-cols-1 row-cols-md-5 g-3 flex-grow-1">
                    <div class="col">
                        <a href="/api/hechos" class="text-decoration-none h-100 d-block">
                            <div class="card text-white bg-primary shadow-sm hover-expand border-0 h-100">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-4">
                                    <i class="fa-solid fa-map-location-dot fa-4x mb-3 opacity-75"></i>
                                    <h3 class="fw-bold mb-0">Hechos</h3>
                                    <div class="mt-3">
                                        <span class="display-4 fw-bold">{{cantHechos}}</span>
                                        <small class="d-block opacity-75 text-uppercase fw-bold"
                                               style="font-size: 0.7rem;">Consultar Hechos</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col">
                        <a href="/admin/colecciones" class="text-decoration-none h-100 d-block">
                            <div class="card text-white bg-success shadow-sm hover-expand border-0 h-100">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-4">
                                    <i class="fa-solid fa-layer-group fa-4x mb-3 opacity-75"></i>
                                    <h3 class="fw-bold mb-0">Colecciones</h3>
                                    <div class="mt-3">
                                        <span class="display-4 fw-bold">{{cantColecciones}}</span>
                                        <small class="d-block opacity-75 text-uppercase fw-bold"
                                               style="font-size: 0.7rem;">Gestionar
                                            Colecciones</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col">
                        <a href="/admin/solicitudes" class="text-decoration-none h-100 d-block">
                            <div class="card text-dark bg-warning shadow-sm hover-expand border-0 h-100">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-4">
                                    <i class="fa-solid fa-triangle-exclamation fa-4x mb-3 opacity-75"></i>
                                    <h3 class="fw-bold mb-0">Reportes</h3>
                                    <div class="mt-3">
                                        <span class="display-4 fw-bold">{{cantReportes}}</span>
                                        <small class="d-block opacity-75 text-uppercase fw-bold"
                                               style="font-size: 0.7rem;">Gestionar Reportes</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col">
                        <a href="/admin/fuentes" class="text-decoration-none h-100 d-block">
                            <div class="card text-white bg-danger shadow-sm hover-expand border-0 h-100">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-4">
                                    <i class="fa-solid fa-server fa-4x mb-3 opacity-75"></i>
                                    <h3 class="fw-bold mb-0">Fuentes</h3>
                                    <div class="mt-3">
                                <span class="display-4 fw-bold">
                                    {{#if cantFuentes}}{{cantFuentes}}{{else}}-{{/if}}
                                </span>
                                        <small class="d-block opacity-75 text-uppercase fw-bold"
                                               style="font-size: 0.7rem;">Gestionar Fuentes</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col">
                        <a href="/admin/estadisticas" class="text-decoration-none h-100 d-block">
                            <div class="card text-dark bg-info shadow-sm hover-expand border-0 h-100">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-4">
                                    <i class="fa-solid fa-chart-pie fa-4x mb-3 opacity-75"></i>
                                    <h3 class="fw-bold mb-0">Estadísticas</h3>
                                    <div class="mt-3">
                                    <span class="display-4 fw-bold"><i
                                            class="fa-solid fa-chart-line"></i></span>
                                        <small class="d-block opacity-75 text-uppercase fw-bold"
                                               style="font-size: 0.7rem;">Consulta de
                                            estadísticas</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Efecto al pasar el mouse: Crece un poco y sube el z-index */
        .hover-expand {
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            overflow: hidden;
        }

        .hover-expand:hover {
            transform: scale(1.03);
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.25) !important;
            z-index: 10;
        }

        /* Ajuste para móviles: Que no sean TAN altas si la pantalla es chica */
        @media (max-width: 768px) {
            .hover-expand {
                min-height: 150px; /* Altura mínima digna en celular */
            }
        }
    </style>
{{/partial}}
{{> templates/layout}}