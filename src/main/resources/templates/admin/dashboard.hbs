{{#partial "nav_izquierda"}}
    <a href="/" class="btn btn-outline-light btn-sm d-flex align-items-center gap-2" title="Volver al Mapa">
        <i class="fa-regular fa-map"></i>
        <span class="d-none d-sm-block">Volver al Mapa</span>
    </a>
{{/partial}}

{{#partial "contenido"}}
    <div class="container py-4">
        <h2 class="mb-4 fw-bold"><i class="fa-solid fa-gauge-high me-2"></i>Panel de Control</h2>
        <div class="row mb-4">
            <div class="row mb-4">

                <div class="col-md-4">
                    <a href="/api/hechos" class="text-decoration-none">
                        <div class="card text-white bg-primary mb-3 shadow-sm h-100">
                            <div class="card-body d-flex align-items-center justify-content-between">
                                <div>
                                    <h5 class="card-title">Total Hechos</h5>
                                    <p class="card-text display-6 fw-bold">{{cantHechos}}</p>
                                </div>
                                <i class="fa-solid fa-map-location-dot fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a href="/admin/colecciones" class="text-decoration-none">
                        <div class="card text-white bg-success mb-3 shadow-sm h-100">
                            <div class="card-body d-flex align-items-center justify-content-between">
                                <div>
                                    <h5 class="card-title">Colecciones</h5>
                                    <p class="card-text display-6 fw-bold">{{cantColecciones}}</p>
                                </div>
                                <i class="fa-solid fa-layer-group fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4">
                    <a href="/admin/solicitudes" class="text-decoration-none">
                        <div class="card text-white bg-info mb-3 shadow-sm h-100">
                            <div class="card-body d-flex align-items-center justify-content-between">
                                <div>
                                    <h5 class="card-title">Reportes</h5>
                                    <p class="card-text display-6 fw-bold">{{cantReportes}}</p>
                                </div>
                                <i class="fa-solid fa-file-arrow-down fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-header bg-white fw-bold">Contenidos</div>
                    <div class="list-group list-group-flush">
                        <a href="/admin/colecciones"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div><i class="fa-solid fa-folder me-2 text-warning"></i> Administrar Colecciones</div>
                            <i class="fa-solid fa-chevron-right text-muted small"></i>
                        </a>
                        <a href="/admin/fuentes"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div><i class="fa-solid fa-rss me-2 text-danger"></i> Administrar Fuentes</div>
                            <i class="fa-solid fa-chevron-right text-muted small"></i>
                        </a>
                        <a href="/admin/solicitudes"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div><i class="fa-solid fa-file me-2 text-danger"></i> Administrar Reportes</div>
                            <i class="fa-solid fa-chevron-right text-muted small"></i>
                        </a>
                        <a href="/admin/estadisticas"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div><i class="fa-solid fa-file me-2 text-danger"></i> Administrar Estadisticas</div>
                            <i class="fa-solid fa-chevron-right text-muted small"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> templates/layout}}