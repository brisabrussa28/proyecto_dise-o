{{#partial "contenido"}}
    <div class="container-sm py-4 mx-auto">
        <div class="bg-white bg-opacity-75 p-3 rounded shadow-sm">
            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3 border-secondary border-opacity-25">
                <div>
                    <h3><i class="fa-solid fa-folder-open text-warning me-2"></i>
                        <strong>
                            {{#if (gt coleccion.titulo.length 50)}}
                                {{substring coleccion.titulo 0 50}}...
                            {{else}}
                                {{coleccion.titulo}}
                            {{/if}}
                        </strong></h3>
                    <span class="badge bg-secondary">
                        {{#if (gt coleccion.categoria.length 100)}}
                            {{substring coleccion.categoria 0 100}}...
                        {{else}}
                            {{coleccion.categoria}}
                        {{/if}}
                    </span>
                    <span class="text-muted ms-2 small">
                        {{#if (gt coleccion.descripcion.length 100)}}
                            {{substring coleccion.descripcion 0 100}}...
                        {{else}}
                            {{coleccion.descripcion}}
                        {{/if}}
                    </span>
                </div>
            </div>

            <div class="row g-4">

                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm bg-light">
                        <div class="card-body p-4">
                            <h6 class="card-title fw-bold text-uppercase text-muted mb-3 small">
                                <i class="fa-solid fa-gear me-2"></i>Configuración
                            </h6>

                            <form id="formEditarColeccion" action="/admin/colecciones/{{coleccion.id}}/configurar"
                                  method="POST">

                                {{#if (eq coleccion.titulo "Coleccion global")}}
                                    <div class="alert alert-warning small mb-3">
                                        Esta es la colección global. No se puede editar.
                                    </div>
                                {{/if}}

                                <!-- Campos de configuración existentes -->
                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Título</label>
                                    <input type="text" name="titulo" class="form-control"
                                           value="{{coleccion.titulo}}" required
                                        {{#if (eq coleccion.titulo "Coleccion global")}}disabled
                                           readonly{{/if}}>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Categoría</label>
                                    <input type="text" name="categoria" class="form-control"
                                           value="{{coleccion.categoria}}" required
                                           {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Descripción</label>
                                    <textarea name="descripcion" class="form-control" rows="2"
                                              required
                                              {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>{{coleccion.descripcion}}</textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Fuente de Datos</label>
                                    <select name="fuente_id" class="form-select" required
                                        {{#if (eq coleccion.titulo "Coleccion global")}}
                                            disabled{{/if}}>
                                        <option value="" disabled
                                                {{#unless coleccion.fuente}}selected{{/unless}}>
                                            Seleccionar...
                                        </option>
                                        {{#each fuentesDisponibles}}
                                            <option value="{{this.id}}"
                                                    {{#if (eq this.id ../coleccion.fuente.id)}}selected{{/if}}>
                                                {{this.nombre}}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label small fw-bold">Algoritmo de
                                        Consenso</label>
                                    <select name="algoritmo_tipo" class="form-select" required
                                            {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                        <option value="Sin definir"
                                                {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>Sin definir</option>
                                        <option value="May_simple"
                                                {{#if (eq coleccion.algoritmoTipo "May_simple")}}selected{{/if}}>
                                            Mayoría Simple
                                        </option>
                                        <option value="Absoluta"
                                                {{#if (eq coleccion.algoritmoTipo "Absoluta")}}selected{{/if}}>
                                            Unanimidad / Absoluta
                                        </option>
                                        <option value="Mult_menciones"
                                                {{#if (eq coleccion.algoritmoTipo "Mult_menciones")}}selected{{/if}}>
                                            Múltiples Menciones
                                        </option>
                                    </select>
                                </div>

                                <div class="d-grid">
                                    <button type="button" class="btn btn-primary px-4"
                                            id="btnAbrirModalGuardar"
                                            {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                        Guardar Cambios
                                    </button>
                                </div>
                            </form>

                            <hr class="my-4">
                            <!-- SECCIÓN: Visualización de Estado de Filtros (Simplificada) -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="card-title fw-bold text-uppercase text-muted mb-0 small">
                                    <i class="fa-solid fa-filter me-2"></i>Filtros
                                </h6>

                                {{#if coleccion.condicionLegible}}
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                                            <i class="fa-solid fa-check me-1"></i> Activo
                                        </span>

                                        <form action="/admin/colecciones/{{coleccion.id}}/eliminar-condicion"
                                              method="POST" class="m-0">
                                            <button type="submit"
                                                    class="btn btn-link text-danger p-0 small text-decoration-none"
                                                    title="Limpiar Filtros"
                                                    {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                {{else}}
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">
                                        Inactivo
                                    </span>
                                {{/if}}
                            </div>

                            <!-- SECCIÓN: Agregar Condición Dinámica -->
                            <h6 class="card-title fw-bold text-uppercase text-muted mb-3 small">
                                <i class="fa-solid fa-plus me-2"></i>Agregar Regla
                            </h6>

                            <form action="/admin/colecciones/{{coleccion.id}}/agregar-condicion"
                                  method="POST">
                                <div class="mb-2">
                                    <label class="form-label small fw-bold">Lógica de Unión</label>
                                    <select name="cond_logica" class="form-select form-select-sm"
                                            {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                        <option value="AND">Y (Cumplir con todo)</option>
                                        <option value="OR">O (Alternativa)</option>
                                    </select>
                                </div>

                                <div class="row g-2 mb-3">
                                    <div class="col-12">
                                        <label class="form-label small fw-bold">Campo</label>
                                        <!-- Agregamos data-tipo para ayudar al JS -->
                                        <label for="cond_campo"></label><select name="cond_campo"
                                                                                id="cond_campo"
                                                                                class="form-select form-select-sm"
                                                                                onchange="actualizarFormularioCondicion()"
                                                                                {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                        <option value="titulo" data-tipo="texto">Título</option>
                                        <option value="descripcion" data-tipo="texto">Descripción
                                        </option>
                                        <option value="categoria" data-tipo="texto">Categoría
                                        </option>
                                        <option value="anio" data-tipo="numero">Año</option>
                                        <option value="fechaSuceso" data-tipo="fecha">Fecha del
                                            Suceso
                                        </option>
                                        <option value="duracion" data-tipo="numero">Duración
                                        </option>
                                    </select>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label small fw-bold">Operador</label>
                                        <label for="cond_operador"></label><select
                                            name="cond_operador" id="cond_operador"
                                            class="form-select form-select-sm"
                                            onchange="actualizarInputsValor()"
                                            {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                        <option value="IGUAL">Igual a</option>
                                        <option value="CONTIENE">Contiene</option>
                                    </select>
                                    </div>

                                    <!-- Contenedor de Valor 1 -->
                                    <div class="col-12">
                                        <label class="form-label small fw-bold" id="label_valor_1">Valor</label>
                                        <label for="cond_valor_1"></label><input type="text"
                                                                                 name="cond_valor"
                                                                                 id="cond_valor_1"
                                                                                 class="form-control form-control-sm"
                                                                                 placeholder="Valor"
                                                                                 required
                                                                                 {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                    </div>

                                    <!-- Contenedor de Valor 2 (Oculto por defecto) -->
                                    <div class="col-12" id="container_valor_2"
                                         style="display: none;">
                                        <label class="form-label small fw-bold">Hasta</label>
                                        <label for="cond_valor_2"></label><input type="text"
                                                                                 name="cond_valor_2"
                                                                                 id="cond_valor_2"
                                                                                 class="form-control form-control-sm"
                                                                                 placeholder="Valor máximo"
                                                                                 {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                    </div>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-outline-dark btn-sm"
                                            {{#if (eq coleccion.titulo "Coleccion global")}}disabled{{/if}}>
                                        <i class="fa-solid fa-plus me-1"></i> Agregar Condición
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">

                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                            <span class="fw-bold small text-uppercase text-muted">
                                Hechos Consensuados (
                                {{#if
                                    coleccion.hechos}}{{coleccion.hechos.size}}
                                {{else}}0{{/if}})
                            </span>

                            <form action="/admin/colecciones/{{coleccion.id}}/calcular-consenso"
                                  method="POST" class="m-0">
                                <button type="submit" class="btn btn-sm btn-outline-dark">
                                    <i class="fa-solid fa-sync me-1"></i> Recalcular
                                </button>
                            </form>
                        </div>

                        <div class="card-body p-0" style="max-height: 98vh; overflow-y: auto;">
                            <ul class="list-group list-group-flush">
                                {{#each coleccion.hechos}}
                                    <a href="/hechos/{{this.id}}" style="text-decoration: none">
                                        <li class="list-group-item p-3 item-hecho">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1 fw-bold">
                                                    {{#if (gt this.titulo.length 50)}}
                                                        {{substring this.titulo 0 50}}...
                                                    {{else}}
                                                        {{this.titulo}}
                                                    {{/if}}
                                                </h6>
                                                <small class="text-muted">ID: {{this.id}}</small>
                                            </div>
                                            <p class="mb-1 small text-muted text-truncate">
                                                {{#if this.descripcion}}{{this.descripcion}}{{else}}
                                                    Sin descripción{{/if}}
                                            </p>
                                            <small class="text-primary">
                                                <i class="fa-regular fa-calendar me-1"></i>
                                                {{formatDate this.fechaSuceso "dd/MM/yyyy HH:mm"}}
                                            </small>
                                        </li>
                                    </a>
                                {{else}}
                                    <div class="text-center py-5 text-muted">
                                        <i class="fa-regular fa-folder-open fa-2x mb-3 opacity-50"></i>
                                        <p class="mb-0">No hay hechos consensuados.</p>
                                    </div>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación de Guardar Cambios de una Coleccion-->
    <div class="modal fade" id="modalGuardar" tabindex="-1" aria-labelledby="modalGuardarLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white border-0">
                    <h5 class="modal-title" id="modalGuardarLabel">
                        <i class="fa-solid text-primary mb-2"></i>Confirmar guardado
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="text-center mb-3">
                        <i class="fa-regular fa-floppy-disk fa-3x text-primary mb-3"></i>
                        <h6 class="fw-bold">¿Está seguro que desea guardar estos cambios?</h6>
                    </div>
                </div>
                <div class="modal-footer border-0 bg-light">
                    <button type="button" class="btn btn-outline-secondary btn-lg" data-bs-dismiss="modal">
                        <i class="fa-solid fa-times me-1"></i>Cancelar
                    </button>
                    <button type="button"
                            class="btn btn-primary btn-lg text-white"
                            onclick="confirmarGuardado()">
                        <i class="fa-solid fa-floppy-disk me-1"></i>
                        Guardar cambios
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script para lógica dinámica del formulario -->
    <script>
        function actualizarFormularioCondicion() {
            const selectCampo = document.getElementById('cond_campo');
            const selectOperador = document.getElementById('cond_operador');
            const tipo = selectCampo.options[selectCampo.selectedIndex].getAttribute('data-tipo');

            // Limpiar opciones
            selectOperador.innerHTML = '';

            if (tipo === 'numero' || tipo === 'fecha') {
                // Opciones para números/fechas
                agregarOpcion(selectOperador, 'IGUAL', 'Igual a');
                agregarOpcion(selectOperador, 'MAYOR_QUE', 'Mayor que (>)');
                agregarOpcion(selectOperador, 'MENOR_QUE', 'Menor que (<)');
                agregarOpcion(selectOperador, 'MAYOR_IGUAL', 'Mayor o Igual (>=)');
                agregarOpcion(selectOperador, 'MENOR_IGUAL', 'Menor o Igual (<=)');
                agregarOpcion(selectOperador, 'BETWEEN', 'Entre (Rango)');
            } else {
                // Opciones para texto
                agregarOpcion(selectOperador, 'IGUAL', 'Igual a');
                agregarOpcion(selectOperador, 'CONTIENE', 'Contiene');
                agregarOpcion(selectOperador, 'DISTINTO', 'Distinto de');
            }

            actualizarInputsValor();
        }

        function agregarOpcion(select, valor, texto) {
            const opt = document.createElement('option');
            opt.value = valor;
            opt.text = texto;
            select.add(opt);
        }

        function actualizarInputsValor() {
            const selectCampo = document.getElementById('cond_campo');
            const tipo = selectCampo.options[selectCampo.selectedIndex].getAttribute('data-tipo');
            const operador = document.getElementById('cond_operador').value;

            const container2 = document.getElementById('container_valor_2');
            const input1 = document.getElementById('cond_valor_1');
            const input2 = document.getElementById('cond_valor_2');
            const label1 = document.getElementById('label_valor_1');

            // Ajustar tipo de input según el campo
            if (tipo === 'fecha') {
                input1.type = 'date';
                input2.type = 'date';
            } else if (tipo === 'numero') {
                input1.type = 'number';
                input2.type = 'number';
            } else {
                input1.type = 'text';
                input2.type = 'text';
            }

            // Lógica de visibilidad del segundo campo
            if (operador === 'BETWEEN') {
                container2.style.display = 'block';
                input2.required = true;
                label1.textContent = 'Desde';
            } else {
                container2.style.display = 'none';
                input2.required = false;
                input2.value = ''; // Limpiar valor si se oculta
                label1.textContent = 'Valor';
            }
        }

        // Inicializar al cargar
        document.addEventListener('DOMContentLoaded', function () {
            actualizarFormularioCondicion();
        });

        // Abrir modal al hacer clic en "Guardar Cambios"
        const btnGuardar = document.getElementById("btnAbrirModalGuardar");

        if (btnGuardar) {
            btnGuardar.addEventListener("click", () => {
                const modal = new bootstrap.Modal(document.getElementById("modalGuardar"));
                modal.show();
            });
        }

        // Enviar formulario cuando el usuario confirma en el modal
        function confirmarGuardado() {
            const modal = bootstrap.Modal.getInstance(document.getElementById("modalGuardar"));
            modal.hide();

            document.getElementById("formEditarColeccion").submit();
        }
    </script>
{{/partial}}
