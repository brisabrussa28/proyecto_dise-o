{{#partial "nav_izquierda"}}
    <button class="btn btn-outline-light btn-sm d-flex align-items-center gap-2"
            onclick="history.back()">
        <i class="fas fa-arrow-left"></i>
        <span class="d-none d-md-inline">Volver</span>
    </button>
{{/partial}}

{{#partial "contenido"}}
    <style>
        /* Contenedor redondo */
        .profile-image-container {
            position: relative;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            overflow: hidden;
        }

        /* La capa oscura con el icono */
        .hover-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Fondo negro semitransparente */
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 1.5rem;
            opacity: 0; /* Invisible por defecto */
            transition: opacity 0.3s ease; /* Transici√≥n suave */
        }

        /* Cuando pasamos el mouse por el contenedor, mostramos la capa */
        .profile-image-container:hover .hover-overlay {
            opacity: 1;
        }

        /* Cursor de manito si es clickable */
        .cursor-pointer {
            cursor: pointer;
        }
    </style>

    <div class="container-fluid justify-content-center d-flex flex-column align-items-center p-0"
         style="min-height: calc(100vh - 60px)">

        <div class="w-100 h-100 position-absolute top-0 start-0"
             style="z-index: 0;"></div>

        <div class="row w-100 justify-content-center m-0" style="z-index: 1;">

            <div class="col-12 col-md-8 col-lg-6 border-top my-5 border-warning border-5 bg-white bg-opacity-75 rounded p-3">

                <div class="p-4 text-white text-center text-md-start">
                    <div class="d-flex flex-column flex-md-row align-items-center gap-4">

                        <div class="d-flex flex-column align-items-center">

                            {{#if (eq perfil.id usuarioId)}}
                                <form action="/perfil/foto" method="POST"
                                      enctype="multipart/form-data">
                                    <label class="profile-image-container border border-3 border shadow cursor-pointer">

                                        {{#if perfil.foto}}
                                            <img src="/usuarios/{{perfil.id}}/foto"
                                                 class="w-100 h-100 object-fit-cover">
                                        {{else}}
                                            <div class="w-100 h-100 bg-secondary d-flex align-items-center justify-content-center text-white">
                                                {{#if perfil.userName}}
                                                    <span class="display-4 fw-bold">{{charAt
                                                            perfil.userName 0}}</span>
                                                {{else}}
                                                    <i class="fa-solid fa-user fa-3x"></i>
                                                {{/if}}
                                            </div>
                                        {{/if}}

                                        <div class="hover-overlay">
                                            <i class="fa-solid fa-pen"></i>
                                        </div>

                                        <input type="file" name="nueva_foto" class="d-none"
                                               accept="image/*" onchange="this.form.submit()">
                                    </label>
                                </form>
                            {{else}}
                                <div class="profile-image-container border border-3 border shadow">
                                    {{#if perfil.foto}}
                                        <img src="/usuarios/{{perfil.id}}/foto"
                                             class="w-100 h-100 object-fit-cover">
                                    {{else}}
                                        <div class="w-100 h-100 bg-secondary d-flex align-items-center justify-content-center text-white">
                                            {{#if perfil.userName}}
                                                <span class="display-4 fw-bold">{{charAt
                                                        perfil.userName 0}}</span>
                                            {{else}}
                                                <i class="fa-solid fa-user fa-3x"></i>
                                            {{/if}}
                                        </div>
                                    {{/if}}
                                </div>
                            {{/if}}
                        </div>

                        <div class="flex-grow-1" style="max-width: 82%">
                            <h2 class="fw-bold mb-1 text-black" style="display: inline-block; width: 100%; word-break: break-word; overflow-wrap: break-word;">{{perfil.userName}}</h2>
                            <p class="mb-2 fs-5 text-black-50" style="display: inline-block; width: 100%; word-break: break-word; overflow-wrap: break-word;">
                                <i class="fa-regular fa-envelope me-2" ></i>{{perfil.email}}
                            </p>
                            <span class="badge rounded-pill bg-primary border border-white">
                                {{perfil.rol}}
                            </span>
                        </div>
                    </div>
                </div>

                {{#if ultimosHechos}}
                    <div class="px-3 pb-3">
                        <div class="d-flex justify-content-between align-items-end mb-3 border-bottom border-dark pb-2">
                            <h5 class="text-black mb-0">
                                <i class="fa-solid fa-layer-group me-2"></i>Actividad Reciente
                            </h5>
                        </div>

                        <div class="d-flex flex-column gap-3">
                            {{#each ultimosHechos}}
                                <a href="/hechos/{{this.id}}" class="text-decoration-none">
                                    <div class="card bg-dark bg-opacity-50 text-white border-secondary hover-effect">
                                        <div class="card-body d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="fw-bold mb-1">{{this.titulo}}</h6>
                                                <small class="text-white-50">
                                                    <i class="fa-regular fa-calendar me-1"></i>
                                                    {{#if this.fechaSuceso}}
                                                        {{formatDate this.fechaSuceso "dd/MM/yyyy"}}
                                                    {{else}}
                                                        S/D
                                                    {{/if}}
                                                </small>
                                            </div>
                                            <i class="fa-solid fa-chevron-right text-white-50"></i>
                                        </div>
                                    </div>
                                </a>
                            {{/each}}
                        </div>
                    </div>
                {{else}}
                    <div class="px-4 pb-4 text-black-50 fst-italic text-center">
                        No hay hechos registrados por este usuario.
                    </div>
                {{/if}}

            </div>
        </div>
    </div>

    <style>
        .hover-effect {
            transition: transform 0.2s, background-color 0.2s;
        }

        .hover-effect:hover {
            transform: translateX(5px);
            background-color: rgba(0, 0, 0, 0.7) !important;
        }
    </style>
{{/partial}}

{{> templates/layout}}